<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Boostrap Table CSS -->
    <link rel="stylesheet" href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap-table.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="{{ app.request.basepath }}/css/style.css" rel="stylesheet">
    <title>Watson - {% block title %}{% endblock %}</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" target="_blank" href="{{ path('rss_feed') }}"><i class="bi bi-rss"> </i>Flux RSS</i></a>
                    </li>
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                    <li class="nav-item {% if adminMenu is defined %}active{% endif %}">
                        <a class="nav-link" href="{{ path('admin') }}"><i class="bi bi-gear"> </i>Administration</i> </a>
                    </li>
                    {% endif %}
                    {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.username }} <i class="bi bi-patch-check"></i>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="{{ path('logout') }}">Se déconnecter <i class="bi bi-patch-exclamation"></i></a></li>
                        </ul>
                    </li>
                    {% else %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Non connecté <i class="bi bi-patch-minus"></i>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="{{ path('login') }}">Se connecter <i class="bi bi-patch-plus"></i></a></li>
                        </ul>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">{% block content %}{% endblock %}</div>
    <!-- <footer class="footer fixed-bottom py-1 bg-dark">
        <div class="container">
            <p class="text-white text-center">Watson - Made with love by CvTIC and his students</p>
        </div>
    </footer> -->
    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/popper.min.js"></script>
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- JavaScript Boostrap Table plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap-table.min.js"></script>
</body>
</html>
