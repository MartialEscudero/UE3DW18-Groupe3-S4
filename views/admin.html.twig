{% extends "layout.html.twig" %}
{% set adminMenu = true %}

{% block title %}Administration{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="links-tab" data-bs-toggle="tab" data-bs-target="#links" type="button" role="tab" aria-controls="link" aria-selected="true">Links</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab" aria-controls="profile" aria-selected="false">Users</button>
    </li>
  </ul>
  
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active adminTable" id="links">
        <a href="{{ path('admin_link_add') }}"><button type="button" class="btn btn-primary"><span class="bi bi-plus-square"></span> Add link</button></a>
        {% if links %}
        <div class="table-responsive">
            <table id="pagination" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th data-sortable="true" data-field="id">Id</th>
                        <th data-sortable="true" data-field="title">Title</th>
                        <th data-sortable="true" data-field="author">Author</th>
                        <th>Description</th>
                        <th></th>  <!-- Actions column -->
                    </tr>
                </thead>
                {% for link in links %}
                <tr>
                    <td>{{ link.id }}</td>
                    <td><a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a></td>
                    <td>{{ link.user.username }}</td>
                    <td>{{ link.desc | truncate(60) }}</td>
                    <td>
                        <a href="{{ path('admin_link_edit', { 'id': link.id }) }}" class="btn btn-info btn-xs" title="Edit"><span class="bi bi-pencil-square"></span></a>
                        <button type="button" class="btn btn-danger btn-xs" title="Delete" data-bs-toggle="modal" data-bs-target="#linkDialog{{ link.id }}"><span class="bi bi-trash"></span>
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="linkDialog{{ link.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Confirmation needed</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Do you really want to delete this link ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <a class="btn btn-danger" href="{{ path('admin_link_delete', { 'id': link.id }) }}" role="button">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning">No links found.</div>
        {% endif %}
    </div>

    <div class="tab-pane fade adminTable" id="users">
        <a href="{{ path('admin_user_add') }}"><button type="button" class="btn btn-primary"><span class="bi bi-plus-square"></span> Add user</button></a>
        {% if users %}
        <div class="table-responsive">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>  <!-- Actions column -->
                    </tr>
                </thead>
                {% for user in users %}
                <tr>
                    <td>{{ user.username }}</a></td>
                    <td>
                        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-info btn-xs" title="Edit"><span class="bi bi-pencil-square"></span></a>
                        <button type="button" class="btn btn-danger btn-xs" title="Delete" data-bs-toggle="modal" data-bs-target="#userDialog{{ user.id }}"><span class="bi bi-trash"></span>
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="userDialog{{ user.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Confirmation needed</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Do you really want to delete this user ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <a class="btn btn-danger" href="{{ path('admin_user_delete', { 'id': user.id }) }}" role="button">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal end -->
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="alert alert-warning">No users found.</div>
        {% endif %}
    </div>
  </div>

{% endblock %}
